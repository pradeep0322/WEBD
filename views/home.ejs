<body>

    <button class="login" type="button" onclick="myFunction1()" name="button">log in</button>
    <button class="signin" type="button" onclick="myFunction2()" name="button">sign in</button>

<div class="start">
  Stay organize,      <br>
              Stay creative
</div>
    <div class="login_page">
      <form action="/login" method="post">
        <input class="input" name="lusername" placeholder="username" autocomplete="off">
        <input class="input" type="password" name="lpassword" placeholder="password" autocomplete="off">
        <button class="button1" type="submit">Log in</button>
      </form>
    </div>
      <div class="signin_page">
        <form action="/signup" method="post">
          <input class="input" name="susername" placeholder="username" autocomplete="off">
          <input class="input" type="password" name="spassword" placeholder="password" autocomplete="off">
          <button class="button2" type="submit">Sign up</button>
        </form>
      </div>
      <div class="start">
      The to do list to organize work & life
      </div>
<script>
  var x=document.querySelector(".login_page");
  var y=document.querySelector(".signin_page");
  function myFunction1() {
      y.style.display="none";
      x.style.display="block";
}
function myFunction2() {
    x.style.display="none";
    y.style.display="block";
}
</script>
